extends ../layouts/layout.pug

block styles
  link(rel='stylesheet' href='/css/forms.css')
  link(rel='stylesheet' href='/css/product.css')

block content
  main
    form.product-form(action='/admin/product?_method=PUT' method='POST')
      .form-control
        label(for='title') Title
        input#title(type='text' name='title' value=product.title)
      .form-control
        label(for='imageUrl') Image URL
        input#imageUrl(type='text' name='imageUrl' value=product.imageUrl)
      .form-control
        label(for='price') Price
        input#price(type='number' name='price' step='0.01' value=product.price)
      .form-control
        label(for='description') Description
        textarea#description(name='description' rows='5') #{product.description}
      input(type="hidden" name="id", value=product.id)
      button.btn(type='submit') Edit