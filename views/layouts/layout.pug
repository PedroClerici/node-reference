<!DOCTYPE html>
html(lang="en")
  head
    meta(charset='UTF-8')
    meta(name='viewport' content='width=device-width,initial-scale=1')
    meta(http-equiv='X-UA-Compatible' content='ie=edge')
    title #{pageTitle}
    script(defer src="/js/main.js") 
    link(rel='stylesheet' href='/css/main.css')
    block styles
  body
    .backdrop
    header.main-header
      button#side-menu-toggle Menu
      nav.main-header__nav
        ul.main-header__item-list
          li.main-header__item
            a(href='/' class=(path === '/' ? 'active' : null)) Shop
          li.main-header__item
            a(href='/products' class=(path === '/products' ? 'active' : null)) Products
          li.main-header__item
            a(href='/orders' class=(path === '/orders' ? 'active' : null)) Orders
          li.main-header__item
            a(href='/cart' class=(path === '/cart' ? 'active' : null)) Cart
          li.main-header__item
            a(href='/admin/add-product' class=(path === '/admin/add-product' ? 'active' : null)) Add Product
          li.main-header__item
            a(href='/admin/products' class=(path === '/admin/products' ? 'active' : null)) Admin Products

      nav.mobile-nav
        ul.mobile-nav__item-list
          li.mobile-nav__item
            a(href='/' class=(path === '/' ? 'active' : null)) Shop
          li.mobile-nav__item
            a(href='/products' class=(path === '/products' ? 'active' : null)) Products
          li.mobile-nav__item
            a(href='/cart' class=(path === '/orders' ? 'active' : null)) Orders
          li.mobile-nav__item
            a(href='/orders' class=(path === '/orders' ? 'active' : null)) Orders
          li.mobile-nav__item
            a(href='/admin/add-product' class=(path === '/admin/add-product' ? 'active' : null)) Add Product
          li.mobile-nav__item
            a(href='/admin/products' class=(path === '/admin/products' ? 'active' : null)) Admin Products
    block content